<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:padding="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="购物车"
            android:textColor="#121212"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textView_MainActivity_Edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="5dp"
            android:text="编辑"
            android:textSize="12sp" />

    </RelativeLayout>

    <com.jueyes.shoppingcartdemo.SwipeMenuRecyclerView
        android:id="@+id/recyclerView_MainActivity_Content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <LinearLayout
        android:id="@+id/linearLayout_MainActivity_ChoiceShop"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="#fff"
        android:gravity="center">

        <ImageView
            android:id="@+id/imageView_MainActivity_ChoiceShop"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="15dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="全选"
            android:textColor="#121212"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/textView_MainActivity_Price"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="end"
            android:paddingRight="15dp"
            android:text="合计: ¥0.00"
            android:textColor="#121212"
            android:textSize="14sp" />

        <Button
            android:id="@+id/button_MainActivity_Settlement"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:background="#f5f5f5"
            android:text="结算" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout_MainActivity_ChoiceEdit"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="#fff"
        android:gravity="center">

        <ImageView
            android:id="@+id/imageView_MainActivity_ChoiceEdit"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="15dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="全选"
            android:textColor="#121212"
            android:textSize="12sp" />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <Button
            android:id="@+id/button_MainActivity_Clear"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:background="#f5f5f5"
            android:text="清理" />

        <Button
            android:id="@+id/button_MainActivity_Delete"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:background="#f5f5f5"
            android:text="删除" />

    </LinearLayout>

</LinearLayout>